<resources>

    <!-- Base application theme. -->
    <style name="OkCupidTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="OkCupidTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/OkCupidTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="OkCupidTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/muteBlueGrayLight</item>
    </style>

</resources>
